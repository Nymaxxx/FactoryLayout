<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.factorylayout.controller.ObjectCreateController">
   <top>
      <AnchorPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="objectNameText" layoutX="31.0" layoutY="13.0" promptText="Object Name" />
            <ColorPicker fx:id="colorPicker" layoutX="790.0" layoutY="13.0" />
            <CheckBox fx:id="undoCheckBox" layoutX="209.0" layoutY="17.0" mnemonicParsing="false" text="Undo" />
         </children>
      </AnchorPane>
   </top>
   <bottom>
      <AnchorPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="910.0" layoutY="13.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />
            <Button layoutX="14.0" layoutY="13.0" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <Canvas fx:id="canvas" height="500.0" onMouseClicked="#onMouseClicked" onMouseDragged="#onMouseDragged" width="1000.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
